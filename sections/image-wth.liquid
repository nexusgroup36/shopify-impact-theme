{% unless section.settings.full_width %} {% render 'section-spacing-collapsing' %} {% endunless %}
<style>
  #shopify-section-{{ section.id }}{
    --section-outer-spacing-block: 0 !important;
    margin: 0 0 {{ section.settings.section_gap }}px !important;
    padding: 0 !important;
    overflow-x: hidden;
    background: transparent;
    --btn-font: "Gotham","Gotham SSm A","Gotham SSm B",Montserrat,Inter,system-ui,sans-serif;
    --btn-radius: {{ section.settings.btn_radius }}px;
    --btn-py: {{ section.settings.btn_pad_y }}px;
    --btn-px: {{ section.settings.btn_pad_x }}px;
    --btn-ls: {{ section.settings.btn_letter_spacing | divided_by: 1000.0 }}em;
    --btn-fw: {{ section.settings.btn_weight }};
    --btn-fs: clamp(14px,1vw,16px);
  }
  #shopify-section-{{ section.id }} .wl-bleed{
    position:relative;
    width:100vw;
    margin-left:calc(50% - 50vw);
    margin-right:calc(50% - 50vw);
    overflow:hidden;
  }
  @supports(width:100dvw){
    #shopify-section-{{ section.id }} .wl-bleed{
      width:100dvw;
      margin-left:calc(50% - 50dvw);
      margin-right:calc(50% - 50dvw);
    }
  }
  #shopify-section-{{ section.id }} .wl-media{
    position:relative;
    width:100%;
    height:auto;
    aspect-ratio:{{ section.settings.desktop_aspect_w }}/{{ section.settings.desktop_aspect_h }};
    {% if section.settings.allow_transparent_header %}
      margin-top:calc(-1 * var(--header-height,80px));
    {% endif %}
  }
  @media(max-width:699px){
    #shopify-section-{{ section.id }} .wl-media{
      aspect-ratio:{{ section.settings.mobile_aspect_w }}/{{ section.settings.mobile_aspect_h }};
      margin-top:0;
    }
  }
  #shopify-section-{{ section.id }} .wl-media picture,
  #shopify-section-{{ section.id }} .wl-media img{
    width:100% !important;
    height:100% !important;
    object-fit:contain !important;
    object-position:center !important;
    display:block !important;
  }
  #shopify-section-{{ section.id }} .wl-overlay{
    position:absolute; inset:0;
    background:{{ section.settings.overlay_color }};
    opacity:{{ section.settings.overlay_opacity | divided_by:100.0 }};
    pointer-events:none;
  }
  /* Desktop/Mobile separate padding */
  #shopify-section-{{ section.id }} .wl-layer{
    position:absolute; inset:0; z-index:2;
    display:flex; flex-direction:column;
    align-items:{{ section.settings.h_align }};
    justify-content:{{ section.settings.v_align }};
    padding:{{ section.settings.content_padding_desktop }}px;
    color:{{ section.settings.text_color }};
    width:100%;
  }
  @media(max-width:699px){
    #shopify-section-{{ section.id }} .wl-layer{
      padding:{{ section.settings.content_padding_mobile }}px;
    }
  }
  #shopify-section-{{ section.id }} .prose{
    margin:0; width:100%; max-width:100%;
    text-align:{{ section.settings.text_align }};
  }
  #shopify-section-{{ section.id }} .prose>*{margin:0 0 .6rem 0;}
  #shopify-section-{{ section.id }} .wl-btn-row{
    width:100%;
    display:flex;
    justify-content:{{ section.settings.btn_align_desktop }};
  }
  @media(max-width:699px){
    #shopify-section-{{ section.id }} .wl-btn-row{
      justify-content:{{ section.settings.btn_align_mobile }};
    }
  }
  #shopify-section-{{ section.id }} .wl-btn{
    -webkit-font-smoothing: antialiased;
    font-family:var(--btn-font);
    font-weight:var(--btn-fw);
    letter-spacing:var(--btn-ls);
    font-size:var(--btn-fs);
    line-height:1;
    display:inline-flex; align-items:center; justify-content:center;
    padding:var(--btn-py) var(--btn-px);
    border-radius:var(--btn-radius);
    text-decoration:none !important;
    transition:transform .18s ease, box-shadow .18s ease, background-color .18s ease, color .18s ease, border-color .18s ease;
    background:{{ section.settings.btn_bg_desktop }};
    color:{{ section.settings.btn_text_desktop }};
    border:1px solid {{ section.settings.btn_border_desktop }};
  }
  #shopify-section-{{ section.id }} .wl-btn:hover{
    transform:translateY(-1px);
    box-shadow:0 6px 16px rgba(0,0,0,.08);
  }
  @media(max-width:699px){
    #shopify-section-{{ section.id }} .wl-btn{
      background:{{ section.settings.btn_bg_mobile }};
      color:{{ section.settings.btn_text_mobile }};
      border:1px solid {{ section.settings.btn_border_mobile }};
    }
  }
</style>

<section id="wl-hero-{{ section.id }}">
  <div class="wl-bleed">
    <div class="wl-media">
      {% if section.settings.image != blank %}
        <picture>
          {% if section.settings.mobile_image != blank %}
            <source media="(max-width:699px)" srcset="{{ section.settings.mobile_image | image_url: width:1400 }}">
          {% endif %}
          <img src="{{ section.settings.image | image_url: width:2400 }}" alt="{{ section.settings.image.alt | escape }}" loading="eager">
        </picture>
        {% if section.settings.overlay_opacity > 0 %}
          <div class="wl-overlay"></div>
        {% endif %}
      {% endif %}

      {% if section.blocks.size > 0 %}
      <div class="wl-layer">
        <div class="prose">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'subheading' %}
                {% if block.settings.text != blank %}<p>{{ block.settings.text | escape }}</p>{% endif %}
              {% when 'heading' %}
                {% if block.settings.text != blank %}<h2 style="font-size:clamp(22px,3.6vw,48px);line-height:1.1">{{ block.settings.text }}</h2>{% endif %}
              {% when 'richtext' %}
                {% if block.settings.content != blank %}{{ block.settings.content }}{% endif %}
              {% when 'button' %}
                {% if block.settings.text != blank %}
                  <div class="wl-btn-row">
                    <a class="wl-btn" href="{{ block.settings.url }}">{{ block.settings.text }}</a>
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero fullfit clean",
  "settings": [
    { "type": "checkbox", "id": "allow_transparent_header", "label": "Allow transparent header", "default": false },
    { "type": "image_picker", "id": "image", "label": "Desktop image" },
    { "type": "image_picker", "id": "mobile_image", "label": "Mobile image (optional)" },
    { "type": "header", "content": "Aspect ratios" },
    { "type": "range", "id": "desktop_aspect_w", "label": "Desktop width ratio", "min": 1, "max": 21, "step": 1, "default": 9 },
    { "type": "range", "id": "desktop_aspect_h", "label": "Desktop height ratio", "min": 1, "max": 21, "step": 1, "default": 16 },
    { "type": "range", "id": "mobile_aspect_w", "label": "Mobile width ratio", "min": 1, "max": 21, "step": 1, "default": 4 },
    { "type": "range", "id": "mobile_aspect_h", "label": "Mobile height ratio", "min": 1, "max": 21, "step": 1, "default": 5 },
    { "type": "header", "content": "Overlay and text" },
    { "type": "color", "id": "overlay_color", "label": "Overlay color", "default": "#000000" },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay opacity", "min": 0, "max": 80, "step": 5, "default": 20 },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#ffffff" },
    { "type": "header", "content": "Button alignment & style" },
    { "type": "select", "id": "btn_align_desktop", "label": "Button align (desktop)", "default": "center", "options": [
      { "value": "flex-start", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "flex-end", "label": "Right" }
    ]},
    { "type": "select", "id": "btn_align_mobile", "label": "Button align (mobile)", "default": "center", "options": [
      { "value": "flex-start", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "flex-end", "label": "Right" }
    ]},
    { "type": "color", "id": "btn_bg_desktop", "label": "Button BG desktop", "default": "#F2F2F2" },
    { "type": "color", "id": "btn_text_desktop", "label": "Button text desktop", "default": "#000000" },
    { "type": "color", "id": "btn_border_desktop", "label": "Button border desktop", "default": "#E6E6E6" },
    { "type": "color", "id": "btn_bg_mobile", "label": "Button BG mobile", "default": "#000000" },
    { "type": "color", "id": "btn_text_mobile", "label": "Button text mobile", "default": "#FFFFFF" },
    { "type": "color", "id": "btn_border_mobile", "label": "Button border mobile", "default": "#000000" },
    { "type": "range", "id": "btn_radius", "label": "Button corner radius", "min": 0, "max": 36, "step": 1, "default": 10 },
    { "type": "range", "id": "btn_pad_y", "label": "Button padding Y", "min": 6, "max": 20, "step": 1, "default": 12 },
    { "type": "range", "id": "btn_pad_x", "label": "Button padding X", "min": 10, "max": 28, "step": 1, "default": 18 },
    { "type": "range", "id": "btn_letter_spacing", "label": "Button letter spacing (‰ em)", "min": 0, "max": 40, "step": 1, "default": 10 },
    { "type": "select", "id": "btn_weight", "label": "Button font weight", "default": "600", "options": [
      { "value": "500", "label": "Medium (500)" },
      { "value": "600", "label": "Semibold (600)" },
      { "value": "700", "label": "Bold (700)" }
    ]},
    { "type": "header", "content": "Layout" },
    { "type": "select", "id": "h_align", "label": "Horizontal content", "default": "center", "options": [
      { "value": "flex-start", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "flex-end", "label": "Right" }
    ]},
    { "type": "select", "id": "v_align", "label": "Vertical content", "default": "flex-end", "options": [
      { "value": "flex-start", "label": "Top" },
      { "value": "center", "label": "Middle" },
      { "value": "flex-end", "label": "Bottom" }
    ]},
    { "type": "range", "id": "content_padding_desktop", "label": "Desktop content padding (px)", "min": 0, "max": 80, "step": 4, "default": 24 },
    { "type": "range", "id": "content_padding_mobile", "label": "Mobile content padding (px)", "min": 0, "max": 80, "step": 4, "default": 24 },
    { "type": "range", "id": "section_gap", "label": "Spacing below section (px)", "min": 0, "max": 80, "step": 2, "default": 24 }
  ],
  "blocks": [
    { "type": "subheading", "name": "Subheading", "settings": [ { "type": "text", "id": "text", "label": "Text", "default": "Rated 4.8 out of 5 by 35.000+ happy customers." } ] },
    { "type": "heading", "name": "Heading", "settings": [ { "type": "text", "id": "text", "label": "Heading", "default": "Wake calm, win the day." } ] },
    { "type": "richtext", "name": "Paragraph", "settings": [ { "type": "richtext", "id": "content", "label": "Content", "default": "<p>Protect your mornings with Wake Loop — perfect for anyone who wants to wake up on time, in silence, without disturbing their partner.</p>" } ] },
    { "type": "button", "name": "Button", "settings": [ { "type": "text", "id": "text", "label": "Label", "default": "Shop Now" }, { "type": "url", "id": "url", "label": "Link" } ] }
  ],
  "presets": [{ "name": "Hero fullfit clean" }]
}
{% endschema %}